<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.CocktailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="8dp"
        >

        <ImageView
            android:id="@+id/image_cocktail2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/detale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="12sp"
                    android:text="Name"
                    >
                </TextView>

                <TextView
                    android:id="@+id/alcoholic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="12sp"
                    android:text="Alcoholic"
                    >
                </TextView>
                <TextView
                    android:id="@+id/glass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="12sp"
                    android:text="Glass"
                >
            </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_str"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="12sp"
                    android:textColor="#de000000"
                    android:textSize="16sp"
                    android:textStyle="normal"></TextView>
                <TextView
                    android:id="@+id/alcoholic_str"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="12sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/glass_str"
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="12sp"
                    >
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ingredients_text"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#E7E7E7"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Ingredients"
            android:textColor="#de000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            >
        </TextView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ingredients1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingredients2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/instructions_text"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#E7E7E7"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Instructions"
            android:textColor="#de000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            >
        </TextView>
        <TextView
            android:id="@+id/instructions_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#de000000"
            android:lineSpacingExtra="12sp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="13dp"
            >
        </TextView>
    </LinearLayout>
</ScrollView>